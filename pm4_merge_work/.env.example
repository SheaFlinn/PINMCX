# Memphis Civic Prediction Market - Environment Configuration
# Copy this file to .env and add your actual API keys

# OpenAI API Key (required for contract analysis and reframing)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Set OpenAI model preferences
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Database Configuration
DATABASE_URL=sqlite:///memphis_civic_market.db

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Admin Configuration
ADMIN_EMAIL=admin@memphiscivicmarket.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/memphis_civic_market.log
